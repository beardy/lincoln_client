<h2>Network Traffic Timeline</h2>
<div class="slider-wrap">
	<div id="slider1" class="csw">
		<div class="panelContainer">
		
			<div class="panel" title="Packet Size">
				<div class="wrapper">
					<h3>Packet Size Timeline</h3>
					<p><%= @graph_timeline_packet_size %></p>
					<p><a href="#4" class="cross-link" title="Go to Normalized Packet Count">&#171; Previous</a> | <a href="#2" class="cross-link" title="Go to Packet Count">Next &#187;</a></p>
				</div>
			</div>
			<div class="panel" title="Packet Count">
				<div class="wrapper">
					<h3>Packet Count Timeline</h3>
					<p><%= @graph_timeline_packet_count %></p>
					<p><a href="#1" class="cross-link" title="Go to Packet Size">&#171; Previous</a> | <a href="#3" class="cross-link" title="Go to Normalized Packet Size">Next &#187;</a></p>
				</div>
			</div>		
			<div class="panel" title="Normalized Packet Size">
				<div class="wrapper">
					<h3>Normalized Packet Size Timeline</h3>
					<p><%= @graph_timeline_packet_size_normal %></p>
					<p><a href="#2" class="cross-link" title="Go to Packet Count">&#171; Previous</a> | <a href="#4" class="cross-link" title="Go to Normalized Packet Count">Next &#187;</a></p>
				</div>
			</div>
			<div class="panel" title="Normalized Packet Count">
				<div class="wrapper">
					<h3>Normalized Packet Count Timeline</h3>
					<p><%= @graph_timeline_packet_count_normal %></p>
					<p><a href="#3" class="cross-link" title="Go to Normalized Packet Size">&#171; Previous</a> | <a href="#1" class="cross-link" title="Go to Packet Size">Next &#187;</a></p>
				</div>
			</div>
			
		</div><!-- .panelContainer -->
	</div><!-- #slider1 -->
</div><!-- .slider-wrap -->

<div class="clearbox"></div>
